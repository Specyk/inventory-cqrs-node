{
	"version": "0.2.0",
	"dependencies": {
		"express": "^4.19.2",
		"lowdb": "^7.0.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^22.0.0",
		"jest": "^29.7.0",
		"nodemon": "^3.1.4",
		"ts-jest": "^29.2.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4"
	},
	"scripts": {
		"start": "node --inspect -r ts-node/register app/src/main.ts",
		"dev": "nodemon --watch 'app/src/**' --ext 'ts,json' --ignore 'app/**/*.spec.ts' --exec 'node -r ts-node/register  --inspect app/src/main.ts'",
		"build": "npm run clean && tsc --project tsconfig.build.json",
		"start:dist": "node app/src/main",
		"test": "jest",
		"test:watch": "jest --watchAll"
	}
}
