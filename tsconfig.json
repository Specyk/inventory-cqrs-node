{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "es6",
        "noImplicitAny": false,
        "allowJs": true,
        "lib": [
            "es2017"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": [
        "app/**/*.ts"
, "app/src/main.ts"    ],
    "exclude": [
        "node_modules"
    ],
    "transform": {
        "^.+\\.[tj]s$": "ts-jest"
      },
      "transformIgnorePatterns": [
        "<rootDir>/node_modules/(?!@sindresorhus/fnv1a)"
      ],
      "globals": {
        "ts-jest": {
          "tsconfig": {
            "allowJs": true
          }
        }
      }


}